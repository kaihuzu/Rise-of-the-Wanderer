<!DOCTYPE html><html lang="de">
<head>
  <meta charset="UTF-8" />
  <title>Rise of the Wanderer</title>
  <style>
    body {
      font-family: 'Georgia', serif;
      background-color: #1e1e1e;
      color: #f0f0f0;
      padding: 20px;
    }
    #game {
      max-width: 700px;
      margin: auto;
      background-color: #2b2b2b;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px #000;
    }
    button {
      margin-top: 10px;
      padding: 10px 20px;
      background-color: #444;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    button:hover {
      background-color: #666;
    }
    .status {
      margin-bottom: 20px;
      padding: 10px;
      background-color: #1a1a1a;
      border-radius: 5px;
    }
  </style>
</head>
<body>
  <div id="game">
    <h1>Rise of the Wanderer</h1>
    <div class="status">
      <p><strong>HP:</strong> <span id="hp">100</span></p>
      <p><strong>Gold:</strong> <span id="gold">10</span></p>
      <p><strong>Ruf:</strong> <span id="fame">0</span></p>
    </div>
    <div id="story"></div>
    <div id="choices"></div>
  </div>  <script>
    let hp = 100;
    let gold = 10;
    let fame = 0;

    function updateStatus() {
      document.getElementById('hp').textContent = hp;
      document.getElementById('gold').textContent = gold;
      document.getElementById('fame').textContent = fame;
    }

    function showStory(text, choices) {
      document.getElementById('story').innerHTML = `<p>${text}</p>`;
      const choicesDiv = document.getElementById('choices');
      choicesDiv.innerHTML = '';
      choices.forEach(choice => {
        const btn = document.createElement('button');
        btn.textContent = choice.text;
        btn.onclick = () => {
          choice.action();
          updateStatus();
        };
        choicesDiv.appendChild(btn);
      });
    }

    function startGame() {
      showStory(
        "Du wachst in einer kleinen Taverne im Dorf Lornheim auf. Der Geruch von Bier und Abenteuer liegt in der Luft. Was willst du tun?",
        [
          {
            text: "Mit dem Barkeeper sprechen",
            action: () => {
              fame += 1;
              showStory("Der Barkeeper erzählt dir von einer Goblin-Plage im nahen Wald.", [
                {
                  text: "Nimm die Quest an",
                  action: () => {
                    gold += 5;
                    showStory("Du machst dich bereit, in den Wald zu ziehen…", []);
                  }
                },
                {
                  text: "Ignoriere ihn und trink weiter",
                  action: () => {
                    hp -= 5;
                    showStory("Du betrinkst dich. Am nächsten Morgen hast du Kopfschmerzen.", []);
                  }
                }
              ]);
            }
          },
          {
            text: "Das Dorf erkunden",
            action: () => {
              fame += 2;
              showStory("Du triffst eine alte Frau, die dich warnt: 'Die Dunkelheit kehrt zurück…'", [
                {
                  text: "Ignoriere sie",
                  action: () => {
                    showStory("Du gehst weiter, leicht verwirrt.", []);
                  }
                },
                {
                  text: "Frage nach mehr Informationen",
                  action: () => {
                    hp -= 10;
                    showStory("Sie überträgt dir eine dunkle Vision. Du fühlst dich schwach, aber erleuchtet.", []);
                  }
                }
              ]);
            }
          }
        ]
      );
      updateStatus();
    }

    startGame();
  </script></body>
</html>